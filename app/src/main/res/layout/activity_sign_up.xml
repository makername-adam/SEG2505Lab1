<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="408dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/courrielSignTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="courriel" />

        <EditText
            android:id="@+id/courrielSignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/passwordSignTextVIew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password" />

        <EditText
            android:id="@+id/passwordSignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/prenomSignTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prenom" />

        <EditText
            android:id="@+id/prenomSignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/nomSignTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nom" />

        <EditText
            android:id="@+id/nomSignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/addresseSignTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="addresse" />

        <EditText
            android:id="@+id/addresseSignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/enterSignBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>